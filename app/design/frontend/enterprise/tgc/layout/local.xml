            <block type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media.phtml"/>
            -->

            <!-- Add tabs -->
            <block type="catalog/product_view_tabs" name="product.info.tabs" as="info_tabs" template="catalog/product/view/tabs.phtml" >
                <action method="addTab" translate="title" module="catalog"><alias>overview</alias><title>Course Overview</title><block>catalog/product_view_description</block><template>catalog/product/view/course_overview.phtml</template></action>
                <action method="addTab" translate="title" module="catalog"><alias>lectures</alias><title>Lecture Titles</title><block>catalog/product_view_description</block><template>catalog/product/view/lectures_for_mobile.phtml</template></action><!--Tab for mobile devices content -->
