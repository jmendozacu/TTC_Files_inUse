<?php  $_order = $this->getOrder() ?>
<div class="data-table" id="my-orders-table" summary="<?php echo $this->__('Items Ordered') ?>">
    <div class="table-head">
        <div class="table-row">
            <div class="grid12-2"><?php echo $this->__('Format') ?></div>
            <div class="grid12-4"><?php echo $this->__('Description') ?></div>
            <div class="grid12-2"><?php echo $this->__('Price') ?></div>
            <div class="grid12-2"><?php echo $this->__('Quantity') ?></div>
            <div class="grid12-2 col-total"><?php echo $this->__('Total') ?></div>
        </div>
    </div>
        <?php $_items = $_order->getItemsCollection(); ?>
        <?php $_index = 0; ?>
            <?php $_count = $_items->count(); ?>
        <?php foreach ($_items as $_item): ?>
        <?php if ($_item->getParentItem()) continue; ?>
        <div class="table-body">
            <?php echo $this->getItemHtml($_item) ?>
            <?php if($this->helper('giftmessage/message')->getIsMessagesAvailable('order_item', $_item) && $_item->getGiftMessageId()): ?>
            <tr class="border<?php echo ($_index++ > $_count ?' last':'') ?>" id="order-item-gift-message-<?php echo $_item->getId() ?>" style="display:none;">
                <?php $_giftMessage=$this->helper('giftmessage/message')->getGiftMessageForEntity($_item); ?>
                <td class="gift-message-row" colspan="7">
                    <a rel="nofollow" href="#" title="<?php echo $this->__('Close') ?>" onclick="return giftMessageToogle('<?php echo $_item->getId() ?>');" class="btn-close"><?php echo $this->__('Close') ?></a>
                    <dl class="gift-message">
                        <dt><strong><?php echo $this->__('From:') ?></strong> <?php echo $this->escapeHtml($_giftMessage->getRecipient()) ?></dt>
                        <dt><strong><?php echo $this->__('To:') ?></strong> <?php echo $this->escapeHtml($_giftMessage->getSender()) ?></dt>
                        <dd><?php echo $this->helper('giftmessage/message')->getEscapedGiftMessage($_item) ?></dd>
                    </dl>
                </td>
            </tr>
            <?php endif ?>
        </div>
        <?php endforeach; ?>
    <div class="table-foot">
        <table id="order-details-totals" class="order-details-totals">
            <tfoot>
            <?php echo $this->getChildHtml('order_totals') ?>
            </tfoot>
        </table>
    </div>
</div>
<script type="text/javascript">decorateTable('my-orders-table', {'tbody' : ['odd', 'even'], 'tbody tr' : ['first', 'last']})</script>
