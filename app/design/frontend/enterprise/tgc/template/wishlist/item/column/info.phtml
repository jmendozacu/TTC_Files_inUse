/* @var Mage_Wishlist_Model_Item $item */
/* @var Mage_Core_Block_Template $this */
$item = $this->getItem();
$product = $item->getProduct();
$professorHelper = $this->helper('profs');

?>
<div class="grid12-3 details-col">
    <h3 class="product-name"><a href="<?php echo $this->getProductUrl($item) ?>"
                                title="<?php echo $this->escapeHtml($product->getName()) ?>"><?php echo $this->escapeHtml($product->getName()) ?></a>
    </h3>
    <?php //Professor name ?>
    <?php if ($professorName = $professorHelper->getProfessorNamesForProduct($product)): ?>
        <span class="professor-name"><?php echo $professorName; ?></span>
    <?php endif; ?>

    <?php if ($this->getSortedChildren()): ?>
        <div class="item-manage">
            <?php foreach ($this->getSortedChildren() as $childName): ?>
                <?php echo $this->getChildHtml($childName, false); ?>
            <?php endforeach; ?>
        </div>
    <?php endif; ?>
</div>
