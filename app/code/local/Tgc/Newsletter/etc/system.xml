<config>
    <sections>
        <newsletter>
            <groups>
                <subscription>
                    <fields>
                        <allow_guest_subscribe>
                            <sort_order>10</sort_order>
                        </allow_guest_subscribe>
                        <confirm>
                            <sort_order>20</sort_order>
                        </confirm>
                        <confirm_email_identity>
                            <sort_order>30</sort_order>
                        </confirm_email_identity>
                        <confirm_email_template>
                            <sort_order>40</sort_order>
                        </confirm_email_template>
                        <send_success translate="label" module="tgc_newsletter">
                            <label>Send Success Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_success>
                        <success_email_identity>
                            <sort_order>50</sort_order>
                        </success_email_identity>
                        <success_email_template>
                            <sort_order>60</sort_order>
                        </success_email_template>
                        <send_un translate="label" module="tgc_newsletter">
                            <label>Send Unsubscription Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_un>
                        <un_email_identity>
                            <sort_order>70</sort_order>
                        </un_email_identity>
                        <un_email_template>
                            <sort_order>80</sort_order>
                        </un_email_template>
                    </fields>
                </subscription>
            </groups>
        </newsletter>
    </sections>
</config>
