<config>
    <sections>
        <bazaarvoice>
            <groups>
                <conversations_api translate="label">
                    <label>Conversations API</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>210</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <api_key>
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                    </fields>
                </conversations_api>
                <tgc_config>
                    <label>TGC Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>220</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <product_identifier>
                            <label>External Product Identifier</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tgc_bv/system_config_source_productIdentifier</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_identifier>
                    </fields>
                </tgc_config>
                <general>
                    <fields>
                        <EncodingKey>
                            <label>Encoding Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1000</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </EncodingKey>
                    </fields>
                </general>
            </groups>
        </bazaarvoice>
    </sections>
</config>
